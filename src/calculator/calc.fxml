<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="calculator.Controller" stylesheets="/calculator/styles.css">
    <top>
        <HBox prefHeight="50" maxHeight="50">
            <TextField prefHeight="Infinity" alignment="TOP_RIGHT" prefWidth="300" HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>
    <center>
        <GridPane alignment="center" hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints percentWidth="100"/>
                <ColumnConstraints percentWidth="100"/>
                <ColumnConstraints percentWidth="100"/>
                <ColumnConstraints percentWidth="100"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints percentHeight="100"/>
                <RowConstraints percentHeight="100"/>
                <RowConstraints percentHeight="100"/>
                <RowConstraints percentHeight="100"/>
                <RowConstraints percentHeight="100"/>
            </rowConstraints>
            <Button text="C" GridPane.rowIndex="0" GridPane.columnIndex="3" maxWidth="Infinity" maxHeight="Infinity"/>
            <Button text="1" GridPane.rowIndex="1" GridPane.columnIndex="0" maxWidth="Infinity" maxHeight="Infinity"/>
            <Button text="2" GridPane.rowIndex="1" GridPane.columnIndex="1" maxWidth="Infinity" maxHeight="Infinity"/>
            <Button text="3" GridPane.rowIndex="1" GridPane.columnIndex="2" maxWidth="Infinity" maxHeight="Infinity"/>
            <Button text="+" GridPane.rowIndex="1" GridPane.columnIndex="3" maxWidth="Infinity" maxHeight="Infinity"/>
            <Button text="4" GridPane.rowIndex="2" GridPane.columnIndex="0" maxWidth="Infinity" maxHeight="Infinity"/>
            <Button text="5" GridPane.rowIndex="2" GridPane.columnIndex="1" maxWidth="Infinity" maxHeight="Infinity"/>
            <Button text="6" GridPane.rowIndex="2" GridPane.columnIndex="2" maxWidth="Infinity" maxHeight="Infinity"/>
            <Button text="-" GridPane.rowIndex="2" GridPane.columnIndex="3" maxWidth="Infinity" maxHeight="Infinity"/>
            <Button text="7" GridPane.rowIndex="3" GridPane.columnIndex="0" maxWidth="Infinity" maxHeight="Infinity"/>
            <Button text="8" GridPane.rowIndex="3" GridPane.columnIndex="1" maxWidth="Infinity" maxHeight="Infinity"/>
            <Button text="9" GridPane.rowIndex="3" GridPane.columnIndex="2" maxWidth="Infinity" maxHeight="Infinity"/>
            <Button text="*" GridPane.rowIndex="3" GridPane.columnIndex="3" maxWidth="Infinity" maxHeight="Infinity"/>
            <Button text="0" GridPane.rowIndex="4" GridPane.columnIndex="0" maxWidth="Infinity" maxHeight="Infinity"/>
            <Button text="." GridPane.rowIndex="4" GridPane.columnIndex="1" maxWidth="Infinity" maxHeight="Infinity"/>
            <Button text="=" GridPane.rowIndex="4" GridPane.columnIndex="2" maxWidth="Infinity" maxHeight="Infinity"/>
            <Button text="/" GridPane.rowIndex="4" GridPane.columnIndex="3" maxWidth="Infinity" maxHeight="Infinity"/>
        </GridPane>
    </center>
</BorderPane>
